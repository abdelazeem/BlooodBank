<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0592161D">

    <ImageView
        android:id="@+id/login_fragment_im_logo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_100sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/logo_auth_cycle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_fragment_im_logo"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:orientation="vertical"

        >


        <EditText
            android:id="@+id/login_fragment_et_email"
            style="@style/edit_text_style"
            android:hint="الجوال"
            android:inputType="textWebEmailAddress"
            android:gravity="start"
            android:paddingStart="@dimen/_20sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:textDirection="rtl"

            />

        <EditText
            android:textDirection="rtl"
            android:id="@+id/login_fragment_et_password"
            style="@style/edit_text_style"
            android:hint="كلمه المرور"
            android:layoutDirection="rtl"
            android:gravity="end"
            android:paddingStart="@dimen/_20sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:inputType="textPassword"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/login_fragment_chb_remember"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:layoutDirection="ltr"
                android:text="تذكرني"
                android:textColor="#F8F7F7"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/login_fragment_tv_forget_pass"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="هل نسيت كلمة السر؟"
                android:textColor="#F8F7F7"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/login_fragment_btn_sign_in"

            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_btn_login"
            android:text="دخول"
            android:textColor="#92161D"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/login_fragment_btn_sign_up"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:background="#C5C3C3"
        android:text="لا تمتلك حساب؟ بمكنك التسجيل من هنا "
        android:textColor="#92161D" />

</RelativeLayout>