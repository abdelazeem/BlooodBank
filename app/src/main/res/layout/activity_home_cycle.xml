<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >
    <FrameLayout
        android:id="@+id/home_cycle_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_activity_nav_bottom"

        android:paddingBottom="@dimen/_10sdp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_activity_nav_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        app:itemBackground="?selectableItemBackgroundBorderless"
        app:itemHorizontalTranslationEnabled="false"
        android:layout_alignParentBottom="true"
        app:menu="@menu/home_activity_nav_menu"
        app:itemIconTint="@color/whiteColor"
        app:itemTextColor="@color/whiteColor"
        />
</RelativeLayout>