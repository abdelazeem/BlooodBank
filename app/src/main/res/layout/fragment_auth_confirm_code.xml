<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0392161D"
    >

    <ImageView
        android:id="@+id/login_fragment_im_logo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/logo_auth_cycle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_fragment_im_logo"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:orientation="vertical"

        >

        <EditText
            android:id="@+id/confirm_password_fragment_et_code"
            style="@style/edit_text_style"
            android:hint="كود التحقق" />
        <EditText
            android:id="@+id/confirm_password_fragment_et_new_pass"
            style="@style/edit_text_style"
            android:hint="كلمه المرور الجديده" />
        <EditText
            android:id="@+id/confirm_password_fragment_et_confirm_pass"
            style="@style/edit_text_style"
            android:hint="تاكيد كلمه المرور الجديده" />




        <Button
            android:id="@+id/confirm_password_fragment_btn_change_pass"

            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="تغير"
            android:textColor="@color/main_color"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_btn_gray"
            />

    </LinearLayout>


</RelativeLayout>