<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/background_et_white</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:textColorHint">#92161D</item>
        <item name="android:paddingStart">@dimen/_11sdp</item>
    </style>

    <style name="edit_text_style_sign_up">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_et_white</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:textColorHint">#92161D</item>

        <item name="android:drawablePadding">@dimen/_10sdp</item>

    </style>

    <style name="edit_text_style_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_et_white_dard</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:textColorHint">#92161D</item>

        <item name="android:drawablePadding">@dimen/_10sdp</item>

    </style>

    <style name="top_bar_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@color/main_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gray_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/grayColor</item>
        <item name="android:layout_marginHorizontal">@dimen/_15sdp</item>
    </style>

    <style name="tv_none_ridus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>


</resources>